<h4 class="text-uppercase text-center">Lista de Avaliações</h4>

<table class="table">
    <thead>
        <tr>
            <th>Sistema</th>
            <th>Nota</th>
            <th>Telefone</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Sistema.NomeSistema</td>
                <td>@item.Nota</td>
                <td>@item.NumeroTelefone</td>
                <td>@item.DataAvaliacao</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>