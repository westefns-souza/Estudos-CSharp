@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Secret";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

@{ 
    if (this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Permissão de adicionar</p>
    }
}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "Adicionar")
</div>

<div>
    <br />
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos", "Excluir"))">Excluir</a>
</div>
